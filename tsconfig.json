{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": false,
        "declaration": true,
        "esModuleInterop": true,
        "module": "commonjs",
        "lib": ["es5", "es6", "dom"],
        "target": "es5",
        "jsx": "react",
        "plugins": [
            {
              "name": "typescript-plugin-css-modules",
              "options": {
                "customMatcher": "\\.css$",
                "camelCase": "dashes"
              }
            }
        ]
},
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}